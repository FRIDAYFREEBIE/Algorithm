{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "C/C++: g++.exe 활성 파일 빌드",
          "type": "cppbuild",
          "command": "C:\\mingw64\\bin\\g++.exe",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": [
              "$gcc"
          ],
          "detail": "컴파일러: C:\\mingw64\\bin\\g++.exe"
      },
      {
          "label": "실행: 빌드된 exe 실행",
          "type": "shell",
          "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "problemMatcher": []
      }
  ]
}
